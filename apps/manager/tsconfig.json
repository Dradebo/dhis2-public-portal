{
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strictNullChecks": true,
     "incremental": true,        
    "tsBuildInfoFile": ".tsbuildinfo" ,
    "types": [
      "cypress",
      "node"
    ]
  },
  "include": [
    "src",
    "types",
    "tailwind.config.ts",
    "cypress",
    "cypress.config.ts"
  ],
  "exclude": [                 
    "**/node_modules",
    "**/dist",
    "**/test",
    "**/*.spec.ts"
  ]
}
