{
	"$schema": "https://turbo.build/schema.json",
	"ui": "stream",
	"globalEnv": ["CONTEXT_PATH"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**", "build/**"]
		},
		"deploy": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"]
		},
		"build:standalone": {
			"dependsOn": [],
			"outputs": ["build/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"publish:app-hub": {
			"dependsOn": ["build"]
		}
	}
}
